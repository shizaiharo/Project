<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7"
    tools:context=".Consent_ChildVer">

    <tw.cgu.b0929056.testapplication.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="679dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#A0A0A0" />

            <TextView
                android:id="@+id/Consent_Title_ChildVer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="16sp"
                android:text="@string/Consent_Title_ChildVer"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#A0A0A0" />

            <TextView
                android:id="@+id/Consent_ProjectName_ChildVer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="16sp"
                android:text="@string/Consent_ProjectName_ChildVer"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#A0A0A0" />

            <TextView
                android:id="@+id/Consent_Department_ChildVer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="16sp"
                android:text="@string/Consent_Department_ChildVer"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#A0A0A0" />

            <TextView
                android:id="@+id/SubTitle_ChildVer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="受試者（研究參與者）"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/NameTxv_ChildVer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名："
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/NameEdt_ChildVer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="請輸入姓名"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/GenderTxv_ChildVer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性別："
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/GenderSpinner_ChildVer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/Sex" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/BirthdayTxv_ChildVer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生日期："
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/BirthdaySetTxv_ChildVer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="未設定"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#A0A0A0" />

            <TextView
                android:id="@+id/Consent_Detail_ChildVer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="16sp"
                android:text="@string/Consent_Detail_ChildVer"
                android:textSize="16sp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>